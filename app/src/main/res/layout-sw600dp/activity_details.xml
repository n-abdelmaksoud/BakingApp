<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/fragment_steps"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:name="com.example.android.bakingapp.fragments.StepsFragment"/>

        <View
            android:id="@+id/line"
            android:layout_width="@dimen/line_thickness"
            android:layout_height="match_parent"
            android:background="@color/rectangle_shape_color"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginStart="@dimen/padding_small"
            android:layout_marginRight="@dimen/padding_small"
            android:layout_marginEnd="@dimen/padding_small"/>

        <fragment
            android:id="@+id/fragment_instructions"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:name="com.example.android.bakingapp.fragments.InstructionsFragment"/>

    </LinearLayout>
</layout>
